<div class="container">
  <h2>List of Cocktails</h2>
  <ul>
    <% @cocktails.each do |cocktail| %>
      <li><%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
        <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%#= link_to "Add a new cocktail", new_cocktail_path, class:"btn btn-primary mt-3" %>
</div>
